<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#E6E6E6"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/fan_iv_portrait"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/nba_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fan_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百合"
            app:layout_constraintLeft_toRightOf="@id/fan_iv_portrait"
            app:layout_constraintTop_toTopOf="@id/fan_iv_portrait" />

        <TextView
            android:id="@+id/fan_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝.5"
            app:layout_constraintLeft_toRightOf="@id/fan_iv_portrait"
            app:layout_constraintBottom_toBottomOf="parent"
          />


        <TextView
            android:id="@+id/common_follow_view"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="关注"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
